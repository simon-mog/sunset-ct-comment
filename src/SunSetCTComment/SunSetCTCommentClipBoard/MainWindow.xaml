<Window x:Class="SunSetCTCommentClipBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SunSetCTCommentClipBoard"
        mc:Ignorable="d"
        Title="クリップボードにコピーします"
        Height="450"
        Width="340"
        FontSize="14">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="DockPanel">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <StackPanel Name="SimpleModeStackPanel"
                    Background="White"
                    MouseLeftButtonDown="DragArea_MouseLeftButtonDown">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="グループ" Margin="10,10,0,10" VerticalAlignment="Center"/>
                    <ComboBox Name="GroupComboBox" Margin="1,10,10,10" VerticalAlignment="Center">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                    </ComboBox>
                </StackPanel>
                <CheckBox Name="SimpleModeCheckBox"
                          Content="簡易表示"
                          Margin="10"
                          VerticalAlignment="Center"
                          DockPanel.Dock="Right"
                          Checked="SimpleModeCheckBox_Checked"
                          Unchecked="SimpleModeCheckBox_Unchecked"/>
            </DockPanel>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,1" Text="3:00"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Margin="5,1" Text="2:00"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Margin="5,1" Text="1:00"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Margin="5,1" Text="0:30"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Margin="5,1" Text="0:15"/>
                <Button Grid.Row="1" Grid.Column="0" Content="コピー" Height="30" Margin="5,1" Click="Copy180Button_Click"/>
                <Button Grid.Row="1" Grid.Column="1" Content="コピー" Height="30" Margin="5,1" Click="Copy120Button_Click"/>
                <Button Grid.Row="1" Grid.Column="2" Content="コピー" Height="30" Margin="5,1" Click="Copy60Button_Click"/>
                <Button Grid.Row="1" Grid.Column="3" Content="コピー" Height="30" Margin="5,1" Click="Copy30Button_Click"/>
                <Button Grid.Row="1" Grid.Column="4" Content="コピー" Height="30" Margin="5,1" Click="Copy15Button_Click"/>
            </Grid>
            <Grid Margin="5,5,5,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,1" Text="in"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Margin="5,1" Text="in後待機"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Margin="5,1" Text="再開"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Margin="5,1" Text="撃破"/>
                <Button Grid.Row="1" Grid.Column="0" Content="コピー" Height="30" Margin="5,1" Click="CopyInButton_Click"/>
                <Button Grid.Row="1" Grid.Column="1" Content="コピー" Height="30" Margin="5,1" Click="CopyPauseButton_Click"/>
                <Button Grid.Row="1" Grid.Column="2" Content="コピー" Height="30" Margin="5,1" Click="CopyResumeButton_Click"/>
                <Button Grid.Row="1" Grid.Column="3" Content="コピー" Height="30" Margin="5,1" Click="CopyDefeatButton_Click"/>
            </Grid>
        </StackPanel>
        <StackPanel Name="CopyCheckStackPanel">
            <StackPanel Name="SimpleMode" Margin="10,0,10,0">
                <TextBlock Text="コピーした文字列確認用"/>
                <TextBox LostFocus="MyTextBox_LostFocus"/>
            </StackPanel>
            <StackPanel Margin="10">
                <TextBlock Text="コピーした文字列 (上が最新)"/>
                <ListBox Name="CopiedStringsListBox"
                         Height="120"
                         Background="WhiteSmoke"
                         BorderBrush="Gray"
                         BorderThickness="1"
                         Focusable="False"
                         IsEnabled="True"
                         SelectionMode="Single">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
